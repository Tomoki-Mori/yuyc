<h1>イベントの追加</h1>

<%= form_with(model: @event, local: true) do |form| %>

  <div class="title">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

    <div class="time">
    <%= form.label :開始日時 %>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="content">
    <%= form.label :本文内容 %>
    <%= form.text_area :content %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>